{
  "include": ["src/**/*", "index.js"],
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames":true,
  },
}
